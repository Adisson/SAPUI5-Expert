<mvc:View controllerName="logaligroup.sapui5.controller.Main" 
          xmlns="sap.m" 
          xmlns:mvc="sap.ui.core.mvc" 
          displayBlock="true">
    <App>
        <pages>
            <Page title="{i18n>appTitle}">
                <content>
                    <Button text="{i18n>showHello}" press="onShowhello" />
                    <Input value="{/recipient/name}" 
                        width="50%" 
                        description="Hello {/recipient/name}" 
                        valueLiveUpdate="true" />
                </content> 
            </Page>
        </pages>
    </App>
</mvc:View>
